
<h1>BURGER TIME!</h1>

<h2>EAT-DA-BURGER</h2>
<div class="container uneaten">
<ul>
  {{#each burger}}
  {{#unless this.devoured}}
      <li>{{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR IT!</button>
        </form>
      </li>
      {{/unless}}
  {{/each}}
</ul>
</div>
<div class="container eaten">
DEVOURED!
<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>


<div class="container add-burger"
<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
</div>